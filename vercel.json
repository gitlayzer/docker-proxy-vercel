{
    "version": 2,
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/api/proxy"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                }
            ]
        },
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, s-maxage=86400, max-age=86400"
                },
                {
                    "key": "Vercel-CDN-Cache-Control",
                    "value": "max-age=3600"
                }
            ]
        }
    ]
}